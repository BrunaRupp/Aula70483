<Window x:Class="CadastroDePessoa.View.CadastroPessoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CadastroDePessoa.View"
        mc:Ignorable="d"
        Title="CadastroPessoa" Height="200" Width="450">
    <Grid Margin="0,0,0,-1">
        <Grid.RowDefinitions>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="47*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="311*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Nome" Margin="81,10,7,37.667"/>
        <Label Content="Idade" Margin="84,38,7,10.667"/>
        <TextBox x:Name="tbxNome" Grid.Column="1" HorizontalAlignment="Right" Height="23" Margin="0,14,79,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <TextBox x:Name="tbxIdade" Grid.Column="1" HorizontalAlignment="Right" Height="23" Margin="0,42,79,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="200"/>
        <Button Content="Salvar" Grid.Column="1" HorizontalAlignment="Left" Margin="22,10,0,0" VerticalAlignment="Top" Width="222" Height="34" Grid.Row="1" Click="Button_Click"/>


    </Grid>
</Window>
