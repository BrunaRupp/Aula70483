<Window x:Class="SistemaControleEstoque.View.CadastrarUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaControleEstoque.View"
        mc:Ignorable="d"
        Title="CadastrarUsuario" Height="250" Width="250">
    <Grid>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Senha:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Confirmar:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxLogin" HorizontalAlignment="Left" Height="23" Margin="81,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="138"/>
        <PasswordBox x:Name="tbxSenha" HorizontalAlignment="Left" Margin="81,49,0,0" VerticalAlignment="Top" Width="138"/>
        <PasswordBox x:Name="tbxConfirmar" HorizontalAlignment="Left" Margin="81,80,0,0" VerticalAlignment="Top" Width="138"/>
        <Button Content="Cadastrar" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="222" Height="87" Click="Button_Click"/>

    </Grid>
</Window>
