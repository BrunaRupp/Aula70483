        xmlns:local="clr-namespace:SistemaControleEstoque"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Grid>
        <Label Content="Usuário:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Senha:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbxUsuario" HorizontalAlignment="Left" Height="23" Margin="75,13,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="100"/>
